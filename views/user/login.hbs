<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h3 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Login</h3>
                {{>messages}}
                <form method="POST" action="/users/login">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" id="email" {{#if email}}value="{{email}}" {{/if}} placeholder="matti.meikalainen@example.com" required>
                        
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" id="password" {{#if password}}value="{{password}}" {{/if}} placeholder="Password" required>
                    </div>
                    <button type="submit" id="btnLogin" class="btn btn-primary">Login</button>
                </form>
                <p class="lead mt-4">Want to register? <a href="/users/register">Register</a></p>
            </div>
        </div>
    </div>
</div>
